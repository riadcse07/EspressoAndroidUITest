<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/gridBG"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/grid_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gridIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/gridBG"
        app:layout_constraintTop_toTopOf="@+id/gridBG"
        app:srcCompat="@drawable/dashboard"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/gridBG" />

    <TextView
        android:id="@+id/gridTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:layout_below="@+id/gridIcon"
        android:layout_alignLeft="@+id/gridIcon"
        android:layout_alignStart="@+id/gridIcon"
        app:layout_constraintLeft_toLeftOf="@+id/gridBG"
        app:layout_constraintRight_toRightOf="@+id/gridBG"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/gridIcon"
        app:layout_constraintBottom_toBottomOf="@+id/gridBG"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>